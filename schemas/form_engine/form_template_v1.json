{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "DynUI Form Template Schema V1",
    "description": "Schema for generating functional React forms using DynUI components",
    "type": "object",
    "required": [
        "metadata",
        "form"
    ],
    "properties": {
        "metadata": {
            "type": "object",
            "required": [
                "title"
            ],
            "properties": {
                "version": {
                    "type": "string",
                    "default": "1.0"
                },
                "formType": {
                    "type": "string",
                    "enum": [
                        "simple",
                        "complex"
                    ],
                    "default": "simple"
                },
                "title": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                }
            }
        },
        "form": {
            "type": "object",
            "required": [
                "fields"
            ],
            "properties": {
                "fields": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "object",
                        "required": [
                            "id",
                            "type",
                            "label"
                        ],
                        "properties": {
                            "id": {
                                "type": "string",
                                "pattern": "^[a-zA-Z0-9_]+$"
                            },
                            "type": {
                                "type": "string",
                                "enum": [
                                    "text",
                                    "email",
                                    "password",
                                    "number",
                                    "select",
                                    "checkbox",
                                    "switch",
                                    "textarea",
                                    "date",
                                    "upload"
                                ]
                            },
                            "label": {
                                "type": "string"
                            },
                            "placeholder": {
                                "type": "string"
                            },
                            "required": {
                                "type": "boolean",
                                "default": false
                            },
                            "helperText": {
                                "type": "string"
                            },
                            "defaultValue": {
                                "type": [
                                    "string",
                                    "number",
                                    "boolean"
                                ]
                            },
                            "options": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "required": [
                                        "value",
                                        "label"
                                    ],
                                    "properties": {
                                        "value": {
                                            "type": "string"
                                        },
                                        "label": {
                                            "type": "string"
                                        }
                                    }
                                }
                            },
                            "validation": {
                                "type": "object",
                                "properties": {
                                    "min": {
                                        "type": "number"
                                    },
                                    "max": {
                                        "type": "number"
                                    },
                                    "pattern": {
                                        "type": "string"
                                    },
                                    "message": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "actions": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": [
                            "type",
                            "label"
                        ],
                        "properties": {
                            "type": {
                                "type": "string",
                                "enum": [
                                    "submit",
                                    "cancel",
                                    "reset"
                                ]
                            },
                            "label": {
                                "type": "string"
                            },
                            "endpoint": {
                                "type": "string"
                            },
                            "variant": {
                                "type": "string",
                                "enum": [
                                    "primary",
                                    "secondary",
                                    "ghost",
                                    "danger"
                                ],
                                "default": "primary"
                            }
                        }
                    }
                }
            }
        }
    }
}