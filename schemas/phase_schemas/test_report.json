{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "test_report",
  "type": "object",
  "properties": {
    "test_plan": {
      "type": "string"
    },
    "test_cases": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "steps": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "expected": {
            "type": "string"
          },
          "actual": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": [
              "pass",
              "fail",
              "blocked",
              "skip"
            ]
          }
        },
        "required": [
          "id",
          "title",
          "expected",
          "status"
        ]
      }
    },
    "coverage_percent": {
      "type": "number",
      "minimum": 0,
      "maximum": 100
    },
    "defects": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "required": [
    "test_plan",
    "test_cases"
  ]
}